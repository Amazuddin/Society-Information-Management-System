@model IEnumerable<Society.Models.House>

@{
    ViewBag.HouseIndex = "active";
}
<link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
<style>
    .wod {
        width: 90%;
        margin-bottom: 2px;
    }

    .indexdesignbox {
        margin: 30px 30px 30px 30px;
        padding: 30px;
    }

    .newbox {
        width: 90%;
    }

    #datatable {
        text-align: center;
    }
</style>

<div class="indexdesignbox">
    <table id="datatable" class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HouseNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Information)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img style="height: 100px; width: 100px;" src="~/@Html.DisplayFor(modelItem => item.Image)">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HouseNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Information)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary wod" })
                    @Html.ActionLink("Add House", "Create", null, new { @class = "newbox btn btn-warning" })
                </td>
            </tr>
        }
    </table>
</div>
@section scripts{
    <script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#datatable').DataTable();
        });
    </script>
}