</head>
<body>
    <div class="main-w3pvt mian-content-wthree text-center" id="home">
        <div class="container">
            <div class="style-banner mx-auto">
                <h3 class="text-wh font-weight-bold">Welcome to <span>Our School</span> <br>Best for Education</h3>
                <p class="mt-3 text-li" id="join">Join the Our School now</p>
               
                <!-- form -->
                <div class="home-form-w3ls mt-5">
                    <center>
                        @if (ViewBag.Message != null)
                        {
                            <div class="warning" id="warningLabel">
                                <label>Thank You!.</label>
                            </div>
                        }
                    </center>
                    <form action="School" method="post">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input class="form-control" type="text" name="Name" placeholder="Student's Name"
                                           required="">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" type="text" name="Address" placeholder="Address"
                                           required="">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input class="form-control" type="text" name="Mobile" placeholder="Mobile Number"
                                           required="">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" type="text" id="tddate" name="Date" placeholder="Date" required="" autocomplete="off"/>

                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn_apt btn">Submit</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <!-- banner bottom -->
    <section class="w3ls-bnrbtm py-5" id="about">
        <div class="container py-xl-5 py-lg-3">
            <h3 class="title-w3 mb-md-5 mb-sm-4 mb-2 text-center font-weight-bold">About Us</h3>
            <div class="row">
                <div class="col-lg-6 text-center">
                    <img src="~/Picture/about.jpg" alt="about" class="img-fluid mt-4" />
                </div>
                <div class="col-lg-6 pr-xl-5 mt-4">
