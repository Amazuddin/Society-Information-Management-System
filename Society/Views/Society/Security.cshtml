@using Society.Models

@{
    //Layout = null;
}


    <meta name="viewport" content="width=device-width" />
<title>Security</title>
<style>
    .Documents {
        text-align: center;
        padding: 1em;
        background-color: aliceblue;
        font-weight: 700;
        font-size: 25px;
    }
     .dil {
         margin-top: 30px;
     } 
    .testing {
        height: 370px;
        margin: 10px;
        padding: 0px;
        text-align: center;
        box-shadow: -1px 2px 18px #526152;
    }

    .testing:hover {
        box-shadow: -1px 2px 18px #526152;
    }

    .testing-image {
        width: 100%;
        height: 250px;
    }

    .me-test {
        font-size: 10px;
        margin-top: 5px;
        padding: 5px 5px;
        text-align: center;
        color: black;
    }
</style>

<body>
<div class="container">
    <p class="Documents">Security Department</p>
    <form action="Security" method="POST">
        <div class="row dil">
            @foreach (Security security in ViewBag.Security)
            {
                <div class="col-md-3" style="margin-bottom: 36px;">
                    <div class="testing">
                        <img class="testing-image" src="~/@security.Image">
                        <div class="me-test">
                            <h5>@security.Name</h5>
                            <h5>@security.Moobile</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </form>
</div>
</body>
