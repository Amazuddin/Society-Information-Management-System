    <style>
        .tdname {
            font-size: 20px;
            padding-right: 14px;
        }

        .tdvalue {
            width: 237px;
            border: 2px solid #2c3e50;
            border-radius: 10px;
            height: 40px;
            margin-top: 10px;
        }

        #tddate {
            width: 237px;
            border: 2px solid #2c3e50;
            border-radius: 10px;
            height: 40px;
            margin-top: 10px;
        }

        .am1 {
            margin-top: 30px;
        }

        .up {
            margin-top: 50px;
        }

        .but {
           
            width: 160px;
            height: 45px;
            margin-top: 15px;
        }

        .appr {
            background-color: green;
            color: white;
            text-align: center;
            padding-top: 12px;
        }

        .normal {
            background-color: #662a6bdb;
            color: white;
            text-align: center;
            padding-top: 12px;
        }

        .appointmentlist {
            margin-bottom: 30px;
        }

        #apprbtn {
            background: green;
        }
