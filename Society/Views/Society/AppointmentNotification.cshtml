@using Society.Models
@{
    //Layout = null;
    var i = 1;
}
<link href="~/Content/DataTables/css/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
<style>
    /*Profile*/
    .pro {
        box-shadow: 0px 0px 10px 0px black;
        margin: 20px 1px;
    }

    .profile {
        text-align: center;
        padding: 1em;
        background-color: #6bb6b6;
        font-weight: 700;
        font-size: 22px;
    }


    .labd {
        background-color: #6bb6b6;
        vertical-align: middle;
        font-weight: 700;
    }

    /*Appointment Notification*/

    .dtable {
        margin-top: 120px;
        margin-bottom: 150px;
        box-shadow: 2px 2px 8px black;
        border-radius: 1px 15px;
        padding: 25px;
    }
    .Documents {
        text-align: center;
        padding: 1em;
        background-color: aliceblue;
        font-weight: 600;
        font-size: 22px;
    }
    .de {
        background-color: #e83e8c;
        color: white;
    }
    #informationtable {
        text-align: center;
    }
</style>
<body>
<div class="container">
    <div class="row pro">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <p class="profile">Profile</p>

            <table class="table">
                <tr>
                    <td></td>
                    <td>
                        
                            <img src="~/@ViewBag.Patient.Image" alt="Alternate Text" style="height: 160px; width: 160px;"/>
                        
                    </td>
                </tr>
                <tr>
                    <td class="labd">
                        <label for="name">Name</label>
                    </td>
                    <td>
                        <label>@ViewBag.Patient.Name</label>
                    </td>
                </tr>
                <tr>
                    <td class="labd"><label for="address">Address</label></td>
                    <td>
                        <label>@ViewBag.Patient.Address</label>
                    </td>
                </tr>
                <tr>
                    <td class="labd"><label for="phone">Phone</label></td>
                    <td>
                        <label>@ViewBag.Patient.Mobile</label>
                    </td>
                </tr>
                <tr>
                    <td class="labd"><label for="email">Email</label></td>
                    <td>
                        <label>@ViewBag.Patient.Email</label>
                    </td>
                </tr>
            </table>
        </div>
    </div>

</div>









<div class="container dtable">
    <p class="Documents">Doctor Appointment</p>
    <table id="informationtable" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
        <tr class="de">
            <th class="th-sm">SNo.</th>
            <th class="th-sm"> Doctor Name </th>
            <th class="th-sm"> Specialist</th>
            <th class="th-sm"> Degree</th>
            <th class="th-sm"> Date</th>
        </tr>
        </thead>
        <tbody>
        @foreach (AppointmentVeiw d in Model)
        {

            <tr>
                <td>@i</td>
                <td>@d.DoctorName</td>
                <td>@d.Specialist</td>
                <td>@d.Designation</td>
                <td>@d.Date</td>
            </tr>
            i = i + 1;
        }
        </tbody>
    </table>
</div>

</body>
@section scripts
{
    
<script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#informationtable').DataTable();
        });
    </script>
}