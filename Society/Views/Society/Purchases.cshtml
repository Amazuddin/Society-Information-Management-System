@using Society.Models
@{
    //Layout = null;
    var i = 1;
}

<link href="~/Content/DataTables/css/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
<style>
    .dtable {
        margin-top: 120px;
        margin-bottom: 150px;
        box-shadow: 2px 2px 8px black;
        border-radius: 1px 15px;
        padding: 25px;
       
    }
    #purchases {
        text-align: center;
    }
    .Documents {
        text-align: center;
        padding: 1em;
        background-color: aliceblue;
        font-weight: 600;
        font-size: 22px;
    }
</style>
<body>
<div class=" container dtable">
    <p class="Documents">Purchases Documents</p>
     
        <table id="purchases" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr style="background-color: #fdedec">
                    <th class="th-sm">SNo.</th>
                    <th class="th-sm">Date</th>
                    <th class="th-sm"> Product Code </th>
                    <th class="th-sm"> Product Amount</th>
                    <th class="th-sm">Total Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Order d in Model)
                {

                    <tr>
                        <td>@i</td>
                        <td>@d.Date</td>
                        <td>@d.ProductCode</td>
                        <td>@d.ProductAmount</td>
                        <td>@d.TotalPrice</td>

                    </tr>
                    i = i + 1;
                }
            </tbody>
        </table>


    </div>

</body>
